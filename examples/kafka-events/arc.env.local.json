{
  "services": {
    "kafka-demo/kafka:latest": {
      "debug": {
        "path": "src/kafka"
      },
      "volumes": {
        "docker": {
          "mount_path": "/var/run/docker.sock"
        }
      },
      "parameters": {
        "KAFKA_LISTENERS": "INTERNAL://:9092",
        "KAFKA_ADVERTISED_LISTENERS": "INTERNAL://:9092",
        "KAFKA_LISTENER_SECURITY_PROTOCOL_MAP": "INTERNAL:PLAINTEXT",
        "KAFKA_INTER_BROKER_LISTENER_NAME": "INTERNAL",
        "KAFKA_ADVERTISED_HOST_NAME": "host.docker.internal"
      },
      "port": 9092
    },
    "kafka-demo/zookeeper:latest": {
      "debug": {
        "path": "src/zookeeper"
      }
    },
    "kafka-demo/producer-right:latest": {
      "debug": {
        "path": "src/producer-right"
      },
      "parameters": {
        "DEBUG": {
          "default": "kafka-node:*"
        }
      }
    },
    "kafka-demo/producer-left:latest": {
      "debug": {
        "path": "src/producer-left"
      },
      "parameters": {
        "DEBUG": {
          "default": "kafka-node:*"
        }
      }
    }
  }
}
